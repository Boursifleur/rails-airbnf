
<div class="container btn-add-plane ">
  <%= link_to "Add a new plane", new_plane_path %>
</div> 

<div class="container d-flex my-3">
  <div class="cards pr-3">
    <% @planes.each do |plane| %>
      <%= link_to plane_path(plane) do %>
        <div class="card-product" data-plane_id="<%= plane.id %>">
          <div style="height: 100%">
            <% if plane.photo.attached? %>
              <%= cl_image_tag plane.photo.key %>
            <% else %>
              <img src="https://aircharterservice-globalcontent-live.cphostaccess.com/images/home_tcm36-2071.jpg" />
            <% end %>
          </div>
          <div class="card-product-infos">
            <ul class="list-unstyled">
              <li>
                <div class="font-weight-bold"><%= plane.name %></div>
              </li>
              <li><i class="fas fa-user-friends"></i>  </i><%= plane.capacity %></li>
              <li><i class="fas fa-map-marked-alt"></i>  <%= plane.location %></li>
              <li><i class="fas fa-tags"></i>  <%= plane.price_per_day %> â‚¬</li>
            </ul>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
