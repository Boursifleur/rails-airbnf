
<div class="container">
  <ul class="list-inline tabs-underlined">
    <li>
      <%= link_to "Add a new plane", new_plane_path, class: "tab-underlined active" %>
    </li>
  </ul>
  <div class="cards">
    <% @planes.each do |plane| %>
      <div class="card-product">
        <img src="https://aircharterservice-globalcontent-live.cphostaccess.com/images/home_tcm36-2071.jpg" />
        <div class="card-product-infos">
            <ul class="list-unstyled">
              <li>
                <div><%= link_to plane.name.to_s, plane_path(plane) %></div>
              </li>
            </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>
